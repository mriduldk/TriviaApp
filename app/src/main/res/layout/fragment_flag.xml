<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".ui.FragmentFlag">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_question_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What are the colors in the Indian national flag?"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_question_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_option_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="White"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_option_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yellow"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_option_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orange"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_option_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green"/>

    </LinearLayout>


    <Button
        android:id="@+id/button_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="next"
        />




</androidx.constraintlayout.widget.ConstraintLayout>